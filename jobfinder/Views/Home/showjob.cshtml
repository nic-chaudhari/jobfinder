<style>
    #job-posts {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .single-job-items {
        width: 48%;
        margin-bottom: 30px;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 5px;
    }

        .single-job-items h4 {
            margin: 0;
            font-size: 24px;
            font-weight: bold;
            color: #333;
        }

        .single-job-items li {
            display: inline-block;
            margin-right: 10px;
            font-size: 16px;
            color: #999;
        }

    .items-link {
        text-align: right;
        margin-top: 20px;
    }

        .items-link a {
            background-color: #007bff;
            color: #fff;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

    #apply-form {
        display: none;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 30px;
    }

        #apply-form label {
            display: block;
            margin-bottom: 10px;
            font-size: 16px;
            font-weight: bold;
            color: #333;
        }

        #apply-form input[type="text"],
        #apply-form input[type="email"],
        #apply-form input[type="file"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 10px;
            font-size: 16px;
            color: #333;
        }

        
</style>

<main id="job-posts">
    @foreach (var item in Model)
    {
        <div class="single-job-items">
            <div class="job-items">
                <div class="job-tittle">
                    <a href="@Url.Action("Details", new { id = item.id})"><h4>@Html.DisplayFor(modelItem => item.company_name)</h4></a>
                    <ul>
                        <li>@Html.DisplayFor(modelItem => item.required_skills)</li>
                        <li><i class="fas fa-map-marker-alt"></i>@Html.DisplayFor(modelItem => item.location)</li>
                        <li>₹@Html.DisplayFor(modelItem => item.salary)</li>
                    </ul>
                </div>
            </div>
            <div class="items-link">
                <a href="#" onclick="showApplyForm('@Url.Action("Apply", "Job", new { id = item.id })')">Apply</a>
                <span>@Html.DisplayFor(modelItem => item.posted_date)</span>
            </div>
        </div>
    }
</main>
